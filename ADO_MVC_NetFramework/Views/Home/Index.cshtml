@model IEnumerable<ADO_MVC_NetFramework.Models.Articulo>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div> 
        <table class="table">
            <tr>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Borrar</th>
                <th>Modificar</th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Codigo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Precio</td>
                    <td><a href="/Home/Baja?pCodigo=@articulo.Codigo">Borrar</a></td>
                    <td><a href="/Home/Modificacion?pCodigo=@articulo.Codigo">Modificar</a></td>
                </tr>
            }
        </table>
        <br/>
        <a href="/Home/Alta">Nuevo articulo</a>

    </div>
</body>
</html>
